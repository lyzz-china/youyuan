<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youyuan.mapper.FileMapper" >
    <resultMap type="fileDTO" id="fileResultMap">
        <id property="fileId" column="file_id" />
        <result property="mediaType" column="media_type" />
        <result property="fileFormat" column="file_format" />
        <result property="filePath" column="file_path" />
        <result property="isZip" column="is_zip" />
        <result property="isEncrypt" column="is_encrypt" />
        <result property="originalName" column="original_name" />
        <result property="fileSize" column="file_size" />
        <result property="imageWidth" column="image_width" />
        <result property="imageHeight" column="image_height" />
        <result property="createUserId" column="create_user_id" />
        <result property="createDate" column="create_date" />
        <result property="updateUserId" column="update_user_id" />
        <result property="updateDate" column="update_date" />
    </resultMap>
    
    <insert id="insertFile" parameterType="fileDTO">
        <![CDATA[
        insert into sys_file_info (file_id, media_type, file_format, file_path, is_zip, is_encrypt, original_name, file_size, image_width, image_height, create_user_id, create_date)
        values (#{fileId}, #{mediaType}, #{fileFormat}, #{filePath}, #{isZip}, #{isEncrypt}, #{originalName},#{fileSize}, #{imageWidth}, #{imageHeight}, #{createUserId}, #{createDate})
        ]]>
    </insert>
    
<!--    <delete id="deleteFile" parameterType="string" >-->
<!--        <![CDATA[-->
<!--        delete from sys_file_info where file_id = #{fileId}-->
<!--        ]]>-->
<!--    </delete>-->
<!--    -->
    <select id="queryFileById" parameterType="string" resultMap="fileResultMap">
      <![CDATA[
      select file_id, media_type, file_format, file_path, is_zip, is_encrypt, original_name, file_size, image_width, image_height,
      create_user_id, create_date, update_user_id, update_date
      from  sys_file_info  where file_id = #{fileId}
      ]]>
    </select>
</mapper>